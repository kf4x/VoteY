<h1 id="new_post">New Post</h1>

<%= form_for @post, :html => {:multipart => true} do |f| -%>
<% if @post.errors.any? %>
	<div class="alert alert-error">
		<h2>Oh shoot! There's <%= pluralize(@post.errors.size, "error") %></h2>
		<% @post.errors.full_messages.each do |m| %>
		<ul>
			<li><%= m %></li>
		</ul>
		<% end %>
	</div>
<% end %>
<div class="row">
	<div class="span4 offset3">
	<%= f.text_field :title, :placeholder => 'Title' %>
	<%= f.text_area :content, :placeholder => 'Content', :size => "5x4" %>
	<%= f.label :image, "Upload image" %><%= f.file_field :image %><br/>
	or<br/>
	<%= f.text_field :remote_image_url, :placeholder => 'Image url' %>
<div class="row"><div class="span4"><%= f.submit "Submit" %></div></div>
<% end -%>
</div>
</div>
