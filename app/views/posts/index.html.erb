<h1>Posts Panel</h1>
<div class="row">
	<div class="span6 offset3">
		<table class="table table-striped table-bordered">
			<thead><tr><th>Your posts...</th></tr></thead>
			<% @posts.each	do |post| %>
			<tr>
				<td><%= link_to post.title, post %></td>
				<td><i class="icon-pencil"></i><%= link_to "Edit", edit_post_path(post) %></td><td><i class="icon-remove"></i><%= link_to "Delete", post, :method => :delete, :confirm => 'Are you sure?' %></td>
			</tr>
			<% end %>
			<tr>
				<td><i class="icon-plus"></i><%= link_to "New post", new_post_path %></i></td>
			</tr>
		</table>
	</div>
</div>

